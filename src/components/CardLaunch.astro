---
interface Props {
  id: string;
  name: string;
  img: string;
  success: boolean;
  flightNumber: number;
  details: string | null;
}

const { id, name, img, success, flightNumber, details }: Props = Astro.props;
const seccessText = success ? "Ã‰xito" : "Fracaso";
---

<a
  href={`/launch/${id}`}
  class="rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:bg-gray-700 hover:border-gray-500 transition flex flex-col"
>
  <picture class="flex justify-center p-4">
    <img class="mb-5 rounded-lg" src={img} alt={`${id}`} />
  </picture>

  <header class="p-4 flex-grow">
    <h1 class="mb-2 text-3xl font-semibold text-white">{name}</h1>
    <span
     class:list={[
      "text-xs font-semibold mr-2 px-2.5 py-0 rounded",
      {
        "bg-green-200 text-green-900": success,
        "bg-red-200 text-red-900": !success,
      }
     ]}>
      {seccessText}
    </span>

    <h2 class="my-2 text-2xl font-light text-gray-400">Vuelos: #{flightNumber}</h2>

    <p class="mb-4 font-light tracking-tight text-white">
      {details != null && details.length > 100 ? details.slice(0, 100) + "..." : details}
    </p>
  </header>
</a>
